package bitcamp.pms.controller;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.PrintWriter;
import java.sql.Date;
import java.util.ArrayList;
import java.util.Map;
import java.util.Scanner;

import bitcamp.pms.annotation.Component;
import bitcamp.pms.domain.Project;

@Component(value="project")
public class ProjectListController implements MenuController {
  static ArrayList<Project> projects;

  public ProjectListController() {
    projects = new ArrayList<>();
  }

  public void load() throws Exception {
    FileReader in1 = new FileReader("project.data");
    BufferedReader in = new BufferedReader(in1);

    String line;
    String[] values;
    Project project;
    while ((line = in.readLine()) != null) {
      values = line.split(",");
      project = new Project(values[0], Date.valueOf(values[1]), Date.valueOf(values[2]));
      project.setState(Integer.parseInt(values[3]));
      project.setDescription(values[4]);
      projects.add(project);
    }

    in.close();
    in1.close();
  }

  @Override
  public void init() {
    
  }

  @Override
  public void service(Map<String, Object> paramMap) {
    try {
      this.load();
      
      for (int i = 0; i < projects.size(); i++) {
        System.out.printf("%d, %s\n", i, projects.get(i).toString());
      }
      
    } catch (Exception e) {
      throw new RuntimeException("프로젝트 데이터 로딩 실패!!", e);
    }
  }

  @Override
  public void destroy() {}
}
