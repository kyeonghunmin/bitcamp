<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="MemberDao">
  <!--  
  파라미터나 결과에 대해 데이터 타입을 지정할 때,
  mybatis 설정 파일에 선언된 별명을 사용한다.
  
   -->
  <insert id="insert" parameterType="step30.exam02.Member">

    insert into MEMBERS(MNAME,EMAIL,PWD,TEL)
    values(#{name},#{email},#{password},#{tel})
  </insert>
  
  <update id="update" parameterType="step30.exam02.Member">
    update MEMBERS set
      MNAME=#{name},
      EMAIL=#{email},
      TEL=#{tel}
    where MNO=#{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from MEMBERS
    where MNO=#{no}
  </delete>
  
  <select id="selectList" resultType="step30.exam02.Member">

    select
      MNO as no,
      MNAME as name,
      EMAIL,
      PWD as password,
      TEL
    from MEMBERS
  </select>
</mapper>