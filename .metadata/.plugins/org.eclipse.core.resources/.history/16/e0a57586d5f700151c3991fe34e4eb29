// 주제 : Apache BCEL API - 메서드의 파라미터 정보 알아내기

package step25;

import org.apache.bcel.Repository;
import org.apache.bcel.classfile.JavaClass;
import org.apache.bcel.classfile.Method;

public class Test11 {
  
  static class Member {   
    String name;
    int age;
    float weight;
    float height;
    
    public void setMember(String name, int age, float weight, float height) {
      this.name = name;
      this.age = age;
      this.weight = weight;
      this.height = height;
    }

    @Override
    public String toString() {
      return "Member [name=" + name + ", age=" + age + ", weight=" + weight + 
             ", height=" + height + "]";
    }
    
  }
  
  public static void main(String[] args) throws Exception {
    Class<?> clazz = Class.forName("step25.Test11$Member");
    
    // 1) 인스턴스 생성
    Object obj = clazz.newInstance();
    
    JavaClass clazz2 = Repository.lookupClass("step25.Test11$Member");
    Method[] methods = clazz2.getMethods();
  }
    
}
